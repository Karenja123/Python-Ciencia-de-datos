#Te dice qué tipo de variable es 

#%%
#Concatenar String
saludo_texto_1 = "Hey"
saludo_texto_2 = "¿Cómo estás?
print(saludo_texto_1+" "+saludo_texto_2 )


#%%
#Multiplicar String
un_string = "moja"
print(un_string*10)


#%%
#Darle forma a un string
nombre = "Luis Alonso"
transporte = "Carro"
string_con_formato = "Hola, me llamo {} y llegue en {}".format(nombre,transporte)
print(string_con_formato)
#%%

#Mayúscula sy minúsculas
titulo="Curso de PYTHON"
#MAYUSCULAS
print(titulo.upper())
#Minusculas
print(titulo.lower())
#Capitalizar
print(titulo.capitalize())
print(titulo)

